@using MyAutoPartsWebStore.Web.Models.Products
@model DeleteProductViewModel

@{
	ViewBag.Title = "Delete";
}

<h1 class="text-center">Delete Confirmation</h1>
<div class="description-pane">
	<div class="alert alert-danger">
		<h4 style="margin-bottom: 1em;">Are you sure you want to delete this product?</h4>
		<h5>@Model.Name</h5>
		<img class="delete-img" src="@Model.Image">
		<form method="post" style="margin-top: 2em;">
			<button type="submit" class="btn btn-danger">Yes</button>
			<a class="btn btn-primary" asp-controller="Home" asp-action="Index">No</a>
		</form>
	</div>
</div>
