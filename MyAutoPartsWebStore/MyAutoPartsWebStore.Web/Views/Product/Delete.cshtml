@using MyAutoPartsWebStore.Web.Models.Products
@model DeleteProductViewModel

@{
	ViewData["Title"] = "Delete";
}

<h1>Delete Confirmation</h1>

<div class="alert alert-danger">
	<h5>Are you sure you want to delete this product - @Model.Name</h5>
	<form method="post">
		<button type="submit" class="btn btn-danger">Yes</button>
		<a class="btn btn-primary" asp-controller="Home" asp-action="Index">No</a>
	</form>
</div>