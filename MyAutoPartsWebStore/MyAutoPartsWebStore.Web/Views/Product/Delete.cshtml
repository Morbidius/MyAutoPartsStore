@using MyAutoPartsWebStore.Web.Models.Products
@model DeleteProductViewModel

@{
	ViewData["Title"] = "Delete";
}

<h1>Delete Confirmation</h1>
<div class="alert alert-danger" style="width: 23rem;">
	<h4>Are you sure you want to delete this product?</h4>
	<h5>@Model.Name</h5>
	<img class="delete-image" src="@Model.Image" width="200" height="200">
	<form method="post">
		<button type="submit" class="btn btn-danger">Yes</button>
		<a class="btn btn-primary" asp-controller="Home" asp-action="Index">No</a>
	</form>
</div>
