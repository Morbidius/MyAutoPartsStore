@model ProductFormModel

<div class="container">
	<div class="row-add-edit">
		<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
			<h2 class="heading-margin text-center">@ViewBag.Title</h2>
			<form method="post">
				<div class="form-group">
					<label asp-for="Name"></label>
					<input asp-for="Name" class="form-control" placeholder="Lubricant, Antifreeze, Tire...">
					<span asp-validation-for="Name" class="small text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Description"></label>
					<textarea asp-for="Description" class="form-control" placeholder="Product description here..." rows="5"></textarea>
					<span asp-validation-for="Description" class="small text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Price"></label>
					<input asp-for="Price" class="form-control" placeholder="Product value in BGN...">
					<span asp-validation-for="Price" class="small text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="SizeCapacity"></label>
					<input asp-for="SizeCapacity" class="form-control" placeholder="Product size or capacity...">
					<span asp-validation-for="SizeCapacity" class="small text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Weight"></label>
					<input asp-for="Weight" class="form-control" placeholder="Product weight in kilograms...">
					<span asp-validation-for="Weight" class="small text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="ImageUrl"></label>
					<input asp-for="ImageUrl" class="form-control" placeholder="Insert image here...">
					<span asp-validation-for="ImageUrl" class="small text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="CategoryId"></label>
					<select asp-for="CategoryId" class="form-control">
						@foreach (var category in Model.Categories)
						{
							<option value="@category.Id">@category.Name</option>
						}
					</select>
					<span asp-validation-for="CategoryId" class="small text-danger"></span>
				</div>
				@if (ViewBag.Add == true)
				{
					<button class="btn btn-outline-dark btn-lg" type="submit">Add</button>
				}
				else
				{
					<button class="btn btn-outline-dark btn-lg" type="submit">Edit</button>
				}
			</form>
		</div>
	</div>
</div>