@using MyAutoPartsWebStore.Web.Models.Products
@model AddProductViewModel

@{
	ViewData["Title"] = "Home";
}

<div class="list-group">
	<div class="text-center">
		<h1>Welcome</h1>
	</div>
	<div class="categoryNav font-weight-bolder">Categories</div>
	<div class="flex flex-row">
		<div class="left">
			<div>
				@foreach (var category in Model.Categories)
				{

					<a  target="_blank" asp-controller="Category" asp-action="ViewCategory" asp-route-categoryId="@category.Id" class="list-group-item list-group-item-action">@Html.Raw(category.IconHtml) @category.Name</a>
				}
			</div>
		</div>
		<div class="right"></div>
	</div>
</div>


